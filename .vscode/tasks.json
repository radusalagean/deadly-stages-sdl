{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepare-env",
            "type": "shell",
            "command": "(mkdir bin || true) && psp-cmake -B bin .",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rfv",
                "*.o",
                "*.PBP",
                "*.prx",
                "DeadlyStagesDemo",
                "PARAM.SFO"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "problemMatcher": []
        },
        {
            "label": "rebuild",
            "dependsOn": [
                "clean",
                "build"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "print-env-variables",
            "type": "shell",
            "command": "env",
            "group": {
                "kind": "build"
            }
        }
    ]
}